{
  "name": "typescript-react-app",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "npm run dev",
    "dev": "docker-compose up -d && concurrently \"npm run dev:server\" \"wait-on -l tcp:8000 && npm run dev:client\"",
    "dev:client": "npm run dev -w client",
    "dev:server": "npm run dev -w server",
    "prisma:setup": "npm run prisma:generate -w server && npm run prisma:migrate -w server",
    "prisma:generate": "npm run prisma:generate -w server",
    "prisma:migrate": "npm run prisma:migrate -w server",
    "prisma:studio": "npm run prisma:studio -w server",
    "db:setup": "npm run db:setup -w server",
    "build": "npm run build:server && npm run build:client",
    "build:client": "npm run build -w client",
    "build:server": "npm run build -w server",
    "test": "npm run test -ws",
    "lint": "npm run lint -ws",
    "lint:fix": "npm run lint:fix -ws",
    "format": "prettier --write \"packages/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"packages/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "kill-port": "npm run kill-port -w server",
    "stop": "docker-compose down"
  },
  "devDependencies": {
    "@eslint/js": "^8.56.0",
    "@types/eslint": "^8.44.0",
    "@types/eslint__js": "^8.42.3",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "dotenv-cli": "^8.0.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.1.2",
    "eslint-plugin-react": "^7.33.2",
    "nodemon": "^3.0.0",
    "postcss": "^8.5.3",
    "prettier": "^3.1.1",
    "tailwindcss": "^4.1.4",
    "terser": "^5.39.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "wait-on": "^8.0.3"
  },
  "packageManager": "yarn@1.22.19+sha1.4ba7fc5c6e704fce2066ecbfb0b0d8976fe62447",
  "dependencies": {
    "axios": "^1.9.0",
    "pg": "^8.15.6"
  }
}
