{
  "name": "typescript-react-app",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "yarn dev",
    "dev": "docker-compose up -d && concurrently \"yarn dev:server\" \"wait-on -l tcp:8000 && yarn dev:client\"",
    "dev:client": "yarn workspace client dev",
    "dev:server": "yarn workspace server dev",
    "prisma:setup": "yarn workspace server prisma:generate && yarn workspace server prisma:migrate",
    "prisma:generate": "yarn workspace server prisma:generate",
    "prisma:migrate": "yarn workspace server prisma:migrate",
    "prisma:studio": "yarn workspace server prisma:studio",
    "db:setup": "yarn workspace server db:setup",
    "build": "yarn build:server && yarn build:client",
    "build:client": "yarn workspace client build",
    "build:server": "yarn workspace server build",
    "test": "yarn workspaces run test",
    "lint": "yarn workspaces run lint",
    "lint:fix": "yarn workspaces run lint:fix",
    "format": "prettier --write \"packages/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"packages/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "kill-port": "yarn workspace server kill-port",
    "stop": "docker-compose down"
  },
  "devDependencies": {
    "@eslint/js": "^8.56.0",
    "@types/eslint": "^8.44.0",
    "@types/eslint__js": "^8.42.3",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "dotenv-cli": "^8.0.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.1.2",
    "eslint-plugin-react": "^7.33.2",
    "nodemon": "^3.0.0",
    "postcss": "^8.5.3",
    "prettier": "^3.1.1",
    "tailwindcss": "^4.1.4",
    "terser": "^5.39.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "wait-on": "^8.0.3"
  },
  "packageManager": "yarn@1.22.19+sha1.4ba7fc5c6e704fce2066ecbfb0b0d8976fe62447",
  "dependencies": {
    "axios": "^1.9.0",
    "dotenv": "^16.5.0",
    "pg": "^8.15.6",
    "react-icons": "^5.5.0"
  }
}
